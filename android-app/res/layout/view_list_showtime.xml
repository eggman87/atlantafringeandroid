<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
            android:id="@+id/view_list_showtime_iv_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:minHeight="200dip"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="showtime image"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:background="@color/fringe_transparent"
            android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/view_list_st_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/fringe_yellow"
           />

        <TextView
            android:id="@+id/view_list_st_tv_title"
            android:layout_marginLeft="4dip"
            android:layout_toRightOf="@id/view_list_st_tv_time"
            android:textSize="22sp"
            android:textColor="@color/fringe_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/view_list_st_tv_sub_title"
            android:layout_below="@id/view_list_st_tv_time"
            android:textColor="@color/fringe_white"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/view_list_st_btn_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageButton
            android:id="@+id/view_list_st_btn_fav"
            android:layout_marginTop="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@android:drawable/ic_menu_add"/>
    </RelativeLayout>


</RelativeLayout>