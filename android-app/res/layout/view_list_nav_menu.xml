<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="10dip"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <ImageView
            android:id="@+id/view_list_nav_iv_icon"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:contentDescription="icon"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/view_list_nav_tv_title"
            android:layout_toRightOf="@id/view_list_nav_iv_icon"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/view_list_nav_tv_subtitle"
            android:layout_below="@id/view_list_nav_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



</RelativeLayout>